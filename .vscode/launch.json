  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "cppvsdbg", // Windows
      //   "type": "cppdbg", // Linux
      "request": "launch",
      "program": "${workspaceFolder}/engine/JokaeroEngine.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/engine",
      "environment": [],
      "externalConsole": true,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    }
  ]
}
